<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android"
	>
	<item
		android:state_pressed="true"
		>
		<shape>
			<gradient
				android:startColor="#448900B6"
				android:centerColor="#AA8900B6"
				android:endColor="#448900B6"
				android:angle="90"
				/>
		</shape>
	</item>
	<item
		android:state_focused="true"
		>
		<shape>
			<gradient
				android:startColor="#448900B6"
				android:centerColor="#AA8900B6"
				android:endColor="#448900B6"
				android:angle="90"
				/>
		</shape>
	</item>
	<item
		android:state_selected="true"
		>
		<shape>
			<gradient
				android:startColor="#448900B6"
				android:centerColor="#AA8900B6"
				android:endColor="#448900B6"
				android:angle="90"
				/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="#800000"
				android:centerColor="#cc0000"
				android:endColor="#800000"
				android:angle="90"
				/>
		</shape>
	</item>
</selector>
