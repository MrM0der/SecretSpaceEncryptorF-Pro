<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#505050"
                android:startColor="#323232" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#404040"
                android:startColor="#222222" />
        </shape>
    </item>
</layer-list>
