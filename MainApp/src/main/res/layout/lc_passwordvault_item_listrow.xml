<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/PWVI_RowLayout"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/d_filerow"
	>
	<ImageView
		android:id="@+id/PWVI_itemIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:scaleType="centerInside"	
		android:layout_alignParentLeft="true"
		android:layout_gravity="center_vertical|left"
		android:layout_centerInParent="true"
		android:layout_marginTop="4dp"
		android:layout_marginBottom="4dp"
		android:layout_marginLeft="2dp"
		android:paddingTop="5dp"
		android:paddingBottom="6dp"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:adjustViewBounds="true"
		android:maxWidth="80dp"
		android:maxHeight="80dp"
		android:background="@drawable/d_itemiconimage_bg"
		></ImageView>
	<RelativeLayout
		android:id="@+id/PWVI_itemMainCenter"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_centerInParent="true"
		android:layout_toRightOf="@id/PWVI_itemIcon"
		android:paddingLeft="7dp"
		android:paddingRight="12dp"
		>
		<com.paranoiaworks.unicus.android.sse.components.TextViewMod
			android:id="@+id/PWVI_itemName"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:text="TextView"
			android:textStyle="bold"
			android:textSize="14sp"
			android:singleLine="true"
			android:paddingTop="6dp"
			android:paddingBottom="0dp"
			></com.paranoiaworks.unicus.android.sse.components.TextViewMod>
		<FrameLayout
			android:id="@+id/PWVI_namePasswordDelimiter"
			android:layout_width="fill_parent"
			android:layout_height="6dp"
			android:layout_below="@id/PWVI_itemName"
			></FrameLayout>
		<com.paranoiaworks.unicus.android.sse.components.TextViewMod
			android:id="@+id/PWVI_itemAccount"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_below="@id/PWVI_namePasswordDelimiter"
			android:text="TextView"
			android:singleLine="true"
			android:paddingTop="0dp"
			android:paddingBottom="2dp"
			android:visibility="gone"
			></com.paranoiaworks.unicus.android.sse.components.TextViewMod>
		<RelativeLayout
			android:id="@+id/PWVI_passDateLine"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/PWVI_itemAccount"
			android:paddingTop="0dp"
			android:paddingBottom="6dp"
			>
			<com.paranoiaworks.unicus.android.sse.components.TextViewMod
				android:id="@+id/PWVI_itemPassword"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="TextView"
				android:textStyle="bold"
				android:singleLine="true"
				android:layout_alignParentLeft="true"
				android:layout_toLeftOf="@+id/PWVI_itemDate"
				></com.paranoiaworks.unicus.android.sse.components.TextViewMod>
			<com.paranoiaworks.unicus.android.sse.components.TextViewMod
				android:id="@+id/PWVI_itemDate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:text="TextView2"
				android:singleLine="true"
				></com.paranoiaworks.unicus.android.sse.components.TextViewMod>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>
